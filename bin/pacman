#!/usr/bin/env node

var program  = require("commander"),
    _        = require('underscore')._,
    pacman   = require("../lib/pacman");

/*
 * Parse command line flags.
 */
program
  .version(pacman.version)
  .option("")
  .option("-d, --dev", "dev mode: serve content directly")
  .option("-p, --port <port>", "specify a different server port (default 3000)")
  .option("")
  .option("-b, --build", "build mode: build a complete version, with packed assets")
  .option("-s, --sync <target>", "sync target dir to remote server or local dir using rsync")
  .option("")
  .option("--config <path>", "change config file       (default ./config.js)")
  .option("--source <path>", "change source directory  (default ./content)")
  .option("--target <path>", "change target directory  (default ./public)")
  .parse(process.argv);

/*
 * If no options are given, show the help prompt.
 */
if(!program.dev && !program.build && !program.sync) {
  program.help();
}

/*
 * Override config with command line flags.
 */
var config = pacman.config(_.extend(_.pick(program, [
  "dev", "port", "build", "sync", "config", "source", "target"
]), { silent: false }));

/*
 * Decide what to do.
 */
if(config.dev)   pacman.dev();
if(config.build) pacman.build();
if(config.sync)  pacman.deploy();
